<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragment.MainFragment">

    <Button
        android:id="@+id/btn_to_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Service"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_to_foreground_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foreground Service"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_to_intent_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent Service"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_to_bound_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bound Service"
        android:textAllCaps="false" />
</LinearLayout>